@model CargoTransportation.Models.Cargo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cargo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfCargoId" class="control-label">Type of cargo</label>
                <select asp-for="TypeOfCargoId" class="form-control" asp-items="ViewBag.TypeOfCargoId" > </select>
            </div>
            <div class="form-group">
                <label asp-for="ShelfLife" class="control-label"></label>
                <input asp-for="ShelfLife" type="date" class="form-control" />
                <span asp-validation-for="ShelfLife" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Features" class="control-label"></label>
                <input asp-for="Features" class="form-control" />
                <span asp-validation-for="Features" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
